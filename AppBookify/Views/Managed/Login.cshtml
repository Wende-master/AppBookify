@model Login

@{
    ViewData["Title"] = "Login";
}

<section class="h-100 mb-9 pb-3 fadein-libros-first" style="">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black" style="background-color: #d8d8d8;">
                    <div class="row g-0" style="border-radius: .3rem">
                        <div class="col-lg-6">
                            <div class="card-body mx-md-4">

                                <form method="post">
                                    <div class="d-flex justify-content-center mb-4">
                                        <img class="rounded-pill" width="75" height="75"
                                             src="~/images/logo.png">
                                    </div>
                                    <div class="d-flex justify-content-center mb-4">
                                        <strong>Login</strong>
                                    </div>

                                    <div class="row gy-3 gy-md-4 overflow-hidden">
                                        <div class="form-outline mb-4">
                                            <input type="email" id="email" name="email" class="form-control" required
                                                   style="background-color: #0d6efd40;" placeholder="Correo electrónico" asp-for="Email" />
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="password" asp-for="Password" required
                                                   style="background-color: #0d6efd40;" placeholder="Contraseña"
                                                   name="password" class="form-control" />
                                            <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility()">
                                                <i class="fas fa-eye"></i>
                                            </button>

                                        </div>

                                        <div class="text-center pt-1 mb-2 pb-1">
                                            <button class="btn btn-secondary rounded-pill btn-block mb-3">Iniciar sesión</button>
                                            <br />
                                            <h6>
                                                <span class="text-danger">
                                                    @ViewData["LOGINERROR"]
                                                </span>
                                            </h6>
                                            <h5>
                                                <span class="text-warning">
                                                    @ViewData["ACTIVE"]
                                                </span>
                                            </h5>
                                        </div>

                                        <div class="d-flex align-items-center justify-content-center pb-4">
                                            <a asp-controller="Users" asp-action="RegistroUsuario" class="btn btn-secondary rounded-pill ">¿No tienes una cuenta?</a>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center imagenForm">
                            <div class="text-black px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">Inicia Sesión</h4>
                                <p class="small mb-0">
                                    Aprovecha las últimas oportunidades del momento y sácale provecho
                                    a los libros que quieras con nosotros. Ya puedes disfrutar de tus libros favoritos
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function togglePasswordVisibility() {
            var passwordField = document.getElementById("password");
            var showPasswordBtn = document.querySelector(".btn-outline-secondary");

            if (passwordField.type === "password") {
                passwordField.type = "text";
                showPasswordBtn.innerHTML = `
                                            <i class="fas fa-eye-slash"></i>
                                `;
            } else {
                passwordField.type = "password";
                showPasswordBtn.innerHTML = `
                                            <i class="fas fa-eye"></i>
                                `;
            }
        }
    </script>

}
